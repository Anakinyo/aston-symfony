<!DOCTYPE html>
<html lang="{{ locale }}">
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.css') }}"/>
      <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
      <link rel="stylesheet" href="{{ asset('bundles/astonback/css/styles.css') }}"/>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    {% endblock stylesheets %}
  </head>
  <body>
    {% block flashMsg %}
      {#      {{ dump(app.session.flashbag.all) }}#}
      {% for label,messages in app.session.flashbag.all %}
        <div class="alert alert-{{label}} notify alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          {% for message in messages %}
            <p>{{ message|trans }}</p>
          {% endfor %}
        </div>
      {% endfor %}
    {% endblock %}

    {% block nav %}
      <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('aston_back_homepage') }}">Symfony</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><a href="{{ path('aston_front_homepage') }}">{{ 'Disconnection'|trans }} <span class="sr-only">(current)</span></a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'blog.label'|trans }} <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('aston_back_blog_add') }}">{{ 'blog.post.add'|trans }}</a></li>            
                  <li><a href="{{ path('aston_back_blog_list') }}">{{ 'blog.post.list'|trans }}</a></li>            
                  <li role="separator" class="divider"></li>
                  <li><a href="{{ path('aston_back_category_add') }}">{{ 'blog.category.add'|trans }}</a></li>            
                  <li><a href="{{ path('aston_back_category_list') }}">{{ 'blog.category.list'|trans }}</a></li>            
                </ul>
              </li>
            </ul>    
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  {{ app.user.username|capitalize }}
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  <li><a href="#">Mon compte</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Separated link</a></li>
                </ul>
              </li>
              <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    {% endblock %}

    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-3">
          <h2>left Column</h2>
        </div>
        <div class="col-sm-12 col-md-9">
        {% block body %}{% endblock %}
      </div>
    </div>
  </div>

  {% block javascripts %}
    <script src="{{ asset('vendor/jquery/jquery.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.js') }}"></script>
  {% endblock %}
</body>
</html>
